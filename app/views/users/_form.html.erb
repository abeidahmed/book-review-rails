<%= form_with(model: @user, url: users_path) do |f| %>
  <div>
    <%= f.label :email, class: "text-sm text-gray-700 font-medium" %>
    <%= f.email_field :email, class: "form-input mt-1 block w-full px-3 py-2 shadow-sm" %>
  </div>
  <div class="mt-5">
    <%= f.label :password, class: "text-sm text-gray-700 font-medium" %>
    <%= f.password_field :password, class: "form-input mt-1 block w-full px-3 py-2 shadow-sm" %>
  </div>
  <div class="mt-6">
    <%= f.submit "Sign up", class: "group relative block w-full flex justify-center py-2 px-4 border border-transparent text-sm leading-7 font-medium rounded-md text-white bg-indigo-600 cursor-pointer hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out" %>
  </div>
<% end %>